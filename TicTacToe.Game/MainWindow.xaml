<Window x:Class="TicTacToe.Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe.Game"
        mc:Ignorable="d"
        Title="Tic-Tac-Toe" Height="350" Width="525" ResizeMode="CanMinimize" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <ContentControl x:Name="contentControl"/>
        <Button x:Name="button" Content="Play with friend" HorizontalAlignment="Center" Margin="0,133,0,0" VerticalAlignment="Top" Width="200" Click="button_Click" Height="40" FontSize="20"/>
        <Button x:Name="button1" Content="Play with computer" HorizontalAlignment="Center" Margin="0,207,0,0" VerticalAlignment="Top" Width="200" Click="button1_Click" Height="40" FontSize="20"/>
        <Label x:Name="label" Width="400" HorizontalContentAlignment="Center" Content="Tic-Tac-Toe" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top" FontSize="26" Background="#FFBFDDFF" Foreground="#FFA07D7D"/>

    </Grid>
    
</Window>
    
    
